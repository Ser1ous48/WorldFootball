<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.add.AddFragment">

    <EditText
        android:id="@+id/EquipaFora"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Equipa Fora"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <EditText
        android:id="@+id/EquipaCasa"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Equipa Casa"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <EditText
        android:id="@+id/GolosMarcadosCasa"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Golos Marcados"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="46dp" />

    <EditText
        android:id="@+id/GolosMarcadosFora"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Golos Marcados"
        android:inputType="number"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="46dp" />

    <EditText
        android:id="@+id/AmarelosCasa"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Amarelos"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="89dp" />

    <EditText
        android:id="@+id/AmarelosFora"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Amarelos"
        android:inputType="number"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="89dp" />

    <EditText
        android:id="@+id/VermelhosCasa"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Vermelhos"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="132dp" />

    <EditText
        android:id="@+id/VermelhosFora"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Vermelhos"
        android:inputType="number"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="132dp" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Adicionar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VermelhosFora" />

</androidx.constraintlayout.widget.ConstraintLayout>